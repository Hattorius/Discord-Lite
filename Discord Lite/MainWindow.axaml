<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Discord_Lite.MainWindow"
        Title="Discord_Lite"
        xmlns:assets="clr-namespace:Discord_Lite.Assets"
        xmlns:views="clr-namespace:Discord_Lite.Views"
        ExtendClientAreaToDecorationsHint="True"
        MinWidth="520"
        MinHeight="404"
        Background="#1e1f22"
        FontSize="16"
        FontWeight="400"
        Foreground="#b5bac1"
        FontFamily="Helvetica">
    
    <Panel>
        <Panel Name="ContentHolder"></Panel>
        <Panel Name="ModalHolder"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               IsVisible="False"
               Tapped="ModalHolder_OnTapped">
            <Panel.Background>
                <SolidColorBrush Color="Black" Opacity="0.2"/>
            </Panel.Background>
            
            <Panel Name="ModalHolderContent"/>
        </Panel>
    </Panel>
</Window>
